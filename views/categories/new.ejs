<% include ../partials/flash %>

<h3>New Category</h3>

<form action="/categories/new" method="post">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" name="name" id="name">
  </div>

  <%# <div class="form-group">
    <label for="color">Color</label>
    <input type="text" class="form-control" name="color" id="color">
  </div>
  %>

<% if (user.family.length === 1) { %>
  <div class="form-group">
    <input type="text" class="form-control hidden" name="family" id="family" value="<%=user.family[0].id%>">
  </div>
<% } else { %>

  <% user.family.forEach(function (family) { %>
    <div class="form-group">
      <input type="radio" name="family" id="family" value="<%=family.id%>"> <%=family.name%>
    </div>
  <% }) %>
<% } %>

  <input type="submit" class="btn btn-default">
</form>
