<% include ../partials/flash %>

<h3>New Family</h3>

<form action="/families/new" method="post">

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" name="name" id="name">
  </div>

  <div class="form-group">
    <label for="creator">Creator</label>
    <input type="email" class="form-control" name="creator" id="creator" value="<%=user.local.email%>" readonly>
  </div>

  <div class="form-group">
    <label for="users">Member Email</label>
    <input type="email" class="form-control" name="users" id="users">
  </div>

  <input type="submit" class="btn btn-default">
</form>
